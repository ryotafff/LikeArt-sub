<div class="container takasa">

  <h2 class="edit-title">作品編集</h2>

  <%= form_for @artwork, url: {action:"update"} do |f| %>

  <!-- 画像選択欄 -->
  <div class="row">
    <div class="col-xs-4">
      <%= attachment_image_tag @artwork, :image, size: "200x200",  fallback: "no_image.jpg"%><br>
      <label>Image</label>
      <%= f.attachment_field :image %>
    </div>
    <!-- 作品編集フォーム -->
    <div class="col-lg-6">
      <table class="table table-bordered">

          <tr>
              <th>作品名</th>
              <td><%= f.text_field :title ,class: "form-control offset-6 col-6" %></td>
          </tr>

          <tr>
              <th>アーティスト名</th>
              <td><%= f.text_field :artist_name ,class: "form-control offset-6 col-6" %></td>
          </tr>

          <tr>
              <th>タグ</th>
              <td><%= f.text_area :tag_list ,class: "form-control offset-6 col-6" %></td>
          </tr>

       </table>

       <div class="text-right"><%= f.submit :変更を保存, class: "btn btn-primary" %>
        <% end %>
       </div>
    </div>

  </div>
</div>