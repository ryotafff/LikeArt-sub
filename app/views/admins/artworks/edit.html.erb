<div class="container takasa">
  <h2 class="edit-title"><i class="fas fa-edit">作品編集</i></h2>

  <%= form_for @artwork, url: {action:"update"} do |f| %>

  <!-- 画像選択欄 -->
  <div class="row">
    <div class="col-xs-4">
      <%= attachment_image_tag @artwork, :image, size: "300x300",  fallback: "no_image.jpg" ,class: "image" %><br>
      <label>作品画像</label>
      <%= f.attachment_field :image, id: "artwork-image" %>

    </div>
    <!-- 作品編集フォーム -->
    <div class="col-lg-6">
      <table class="table table-bordered">

          <tr>
              <th>作品名</th>
              <td><%= f.text_field :title ,class: "form-control offset-6 col-6" %></td>
          </tr>

          <tr>
              <th>アーティスト名</th>
              <td><%= f.text_field :artist_name ,class: "form-control offset-6 col-6" %></td>
          </tr>

          <tr>
            <th>タグ (間にはカンマ , をつけて下さい)</th>
            <td><%= f.text_field :tag_list ,value: @artwork.tag_list.join(',') ,class: "form-control offset-6 col-6" %></td>
          </tr>

          <tr>
              <th>作品説明</th>
              <td><%= f.text_area :Introduction ,class: "form-control offset-6 col-6" %></td>
          </tr>

       </table>

        <div class="text-right"><%= f.submit :変更を保存, class: "btn btn-primary" %>
          <% end %>
        </div>
    </div>
  </div>
</div>