<div class="container-mf">
  <div class="row">
    <div class="col-xs-6">


      <h2 class= "fas fa-user-shield">管理者ログイン</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.label :メール %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" ,class: "form-control offset-6 col-6"%>
        </div>

        <div class="field">
          <%= f.label :パスワード %><br />
          <%= f.password_field :password, autocomplete: "current-password",class: "form-control offset-6 col-6" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "ログイン",class: "btn btn-info btn-block mt-5" %>
        </div>
      <% end %>
    </div>
  </div><br>
</div>
