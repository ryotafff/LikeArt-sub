<div class="container">
  <div class="row">
    <div class="col-xs-10">
      <h2><i class="far fa-id-card"></i> 会員情報詳細</h2>

      <!-- 会員情報 -->
      <table class="table table-border">
        <tr>
          <th>会員ID</th>
          <td><%= @user.id %></td>
        </tr>
        <tr>
          <th>氏名</th>
          <td><%= @user.name %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= @user.email %></td>
        </tr>
        <tr>
          <th></th>
          <td><%= link_to "編集する", edit_admins_user_path(@user.id) ,class: "btn btn-success" %>
              <%= link_to "削除する", admins_user_path(@user.id),class: "btn btn-danger", method: :delete , data: { confirm: '削除しますか？' } %>
              <%= link_to "会員一覧にもどる", admins_users_path ,class: "btn btn-info" %></td>
        </tr>
      </table>
    </div>
  </div>
</div>
