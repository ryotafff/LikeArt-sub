<div class="container takasa">

  <h2 class="edit-title"><i class="fas fa-edit">イベント編集</i></h2>

  <%= form_for @event, url: {action:"update"} do |f| %>
  <%= render 'layouts/error_messages', resource: @event %>

  <!-- 画像選択欄 -->
  <div class="row">
    <div class="col-xs-4">
      <%= attachment_image_tag @event, :image, size: "300x300",  fallback: "no_image.jpg" ,class: "image" %><br>
      <label>イベント画像</label>
      <%= f.attachment_field :image , id: "event-image" %>
    </div>
    <!-- イベント編集フォーム -->
    <div class="col-lg-6">
      <table class="table table-bordered">

        <tr>
            <th>イベント名</th>
            <td><%= f.text_field :title ,class: "form-control offset-6 col-6" %></td>
        </tr>

        <tr>
            <th>アーティスト名</th>
            <td><%= f.text_field :artist ,class: "form-control offset-6 col-6" %></td>
        </tr>

        <tr>
            <th>イベント説明</th>
            <td><%= f.text_area :Introduction ,class: "form-control offset-6 col-6" %></td>
        </tr>

        <tr>
          <th>開催期間</th>
          <td><%= f.date_select :start_date ,use_month_numbers: true ,date_separator: '/' ,class: "form-control offset-6 col-6" %><br>
          <%= f.date_select :end_date , use_month_numbers: true ,date_separator: '/' ,class: "form-control offset-6 col-6" %></td>
        </tr>

        <tr>
          <th>開催時間</th>
          <td><%= f.time_select :StartTime ,minute_step: 15 ,class: "form-control offset-6 col-6" %>〜
          <%= f.time_select :EndTime, minute_step: 15 ,class: "form-control offset-6 col-6" %></td>
        </tr>

        <tr>
            <th>開催場所</th>
            <td><%= f.text_field :place ,class: "form-control offset-6 col-6" %></td>
        </tr>

        <tr>
            <th>住所</th>
            <td><%= f.text_field :address ,class: "form-control offset-6 col-6" %></td>
        </tr>

        <tr>
            <th>イベントURL</th>
            <td><%= f.text_field :event_url ,class: "form-control offset-6 col-6" %></td>
        </tr>

        <tr>
            <th>料金</th>
            <td><%= f.text_field :price ,class: "form-control offset-6 col-6" %></td>
        </tr>

        <tr>
            <th>開催ステータス</th>
            <td><%= f.select :hold_status, options_for_select(Event.hold_statuses), class: "form-control offset-6 col-6" %></td>
        </tr>


       </table>

       <div class="text-right"><%= f.submit :変更を保存, class: "btn btn-primary" %>
        <% end %>
       </div><br>
    </div>

  </div>
</div>