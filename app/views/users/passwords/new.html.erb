<div class="container-mf">
    <div class="row">
      <div class="col-lg-6">
        <h2 class ="login">パスワードの再発行</h2>

		<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
		  <%= render "users/shared/error_messages", resource: resource %>

		  <div class="field">
		    <%= f.label :メールアドレス %><br />
		    <%= f.email_field :email, autofocus: true, autocomplete: "email",class: "form-control offset-6 col-6" %>
		  </div>

		  <div class="actions">
		    <%= f.submit "メールを送信" ,class: "btn btn-info btn-block mt-5" %>
		  </div>
		<% end %>

	    <%= render "users/shared/links" %>
        </div>
    </div>
</div>


