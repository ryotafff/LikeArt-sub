<div class="container takasa">

  <h2 class="signup">Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "users/shared/error_messages", resource: resource %>




  <div class="row">
        <div class="col-xs-4">
          <%= attachment_image_tag @user, :profile_image, size: "150x150",  fallback: "no_image.jpg" ,class: "image" %><br>
          <label>プロフィール写真</label>
          <span class="label label-success">任意</span>
          <%= f.attachment_field :profile_image, id: "user-image" %>
        </div>



     <div class="col-lg-6">
        <table class="table table-bordered">

          <tr>
            <th>名前</th>
            <td><%= f.text_field :name ,class: "form-control offset-6 col-6" %></td>
          </tr>

          <tr>
            <th>メールアドレス</th>
            <td><%= f.text_field :email ,class: "form-control offset-6 col-6" %></td>
          </tr>

          <tr>
            <th>自己紹介 <span class="label label-success">任意</span><br></th>
            <td><%= f.text_area :biography ,class: "form-control offset-6 col-6" %></td>
          </tr>

          <tr>
            <th>パスワード</th>
            <td><%= f.password_field :password, autocomplete: "new-password",class: "form-control offset-6 col-6" %></td>
          </tr>

          <tr>
            <th>パスワード確認用</th>
            <td><%= f.password_field :password_confirmation, autocomplete: "new-password",class: "form-control offset-6 col-6" %></td>
          </tr>

        </table>

          <div><%= f.submit :ログイン, class: "btn btn-primary btn-block mt-5" %>
          <% end %>
          </div>


          <br>
          <div class="space">
            <h4>すでに登録済みの方</h4>
            <h4><%= link_to 'こちら', new_user_session_path ,:style=>"color:blue" %>からログインしてください</h4>
          </div>
      </div>
  </div><br>
</div>




