<div class="container-mf">
  <div class="row">
    <div class="col-xs-6">
      <h2 class ="login">Log in</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

        <div class="field">
          <%= f.label :メールアドレス %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email",class: "form-control offset-6 col-6" %>
        </div>

        <div class="field">
          <%= f.label :パスワード %><br />
          <%= f.password_field :password, autocomplete: "current-password",class: "form-control offset-6 col-6" %>
        </div>

        <div>
           <%= link_to "=>パスワードを忘れた方はこちら", new_password_path(resource_name) %>
        </div><br>

        <div class="actions">
          <%= f.submit "ログイン" ,class: "btn btn-info btn-block mt-5" %>
        </div>
      <% end %>

      <div class="space">
        <h4>登録がお済みでない方</h4>
        <h4><%= link_to "こちら", new_user_registration_path ,:style=>"color:blue" %>から新規登録してください。</h4><br>
        <h4><%= link_to "管理者はこちら",  new_admin_session_path ,:style=>"color:navy" %></h4><br>
      </div>
    </div>
  </div>
</div>